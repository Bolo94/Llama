@model LoginViewModel

<div class=" container createAccountForm">
    <div class="createFormTitle text-center">Create Account</div>

    <form asp-action="Register" method="post" class="form-horizontal " role="form">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="createAccountField text-center">
            <div class="form-group ">
                <label asp-for="NickName" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="NickName" class="form-control" />
                    <span asp-validation-for="NickName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="createAccountField text-center">
            <div class="form-group ">
                <label asp-for="UserName" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="createAccountField text-center">
            <div class="form-group">
                <label asp-for="Password" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="createAccountField text-center">
            <div class="form-group">
                <label asp-for="Age" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="createAccountField text-center">
            <div class="form-group">
                <label asp-for="Gender" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="mt-2">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" id="male" asp-for="Gender" type="radio" value="true" />
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" id="female" asp-for="Gender" type="radio" value="false" />
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12 text-right">
                <input type="submit" class="btn btnCreate" value="Create" />
            </div>
        </div>
    </form>
</div>